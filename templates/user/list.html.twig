{% extends 'base.html.twig' %}


{% block header_img %}
    <img class="slide-image" src="{{ asset('img/todolist_content.jpg') }}" alt="todo list">
{% endblock %}

{% block header_title %}<h1>Liste des utilisateurs</h1>{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header">
        <a href="{{ path('user_create') }}" class="btn btn-info pull-right">Créer un utilisateur</a>
    </div>
        <div class="card-body">
            <div class="row">
                <table class="table">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Nom d'utilisateur</th>
                        <th>Adresse d'utilisateur</th>
                        <th>Role</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <th scope="row">{{ loop.index }}</th>
                            <td>{{ user.username }}</td>
                            <td>{{ user.email }}</td>
                            <td>{% if 'ROLE_ADMIN' in user.roles %}Administrateure{% else %}Utilisateur{% endif %}</td>
                            <td class="text-right">
                                <a href="{{ path('user_edit', {'id' : user.id}) }}" class="btn btn-success btn-sm">Modifier</a>
                                <a href="{{ path('user_delete', {'id' : user.id}) }}" class="btn btn-danger btn-sm">Supprimer</a>
                            </td>
                        </tr>
                    {% else %}
                        <div class="alert alert-warning" role="alert">
                            Il n'y a pas encore d'utilisateur enregistré.
                        </div>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
